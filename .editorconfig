# EditorConfig is awesome: https://editorconfig.org
# top-most EditorConfig file
root = true

# All files
[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true
# Whitespace settings
trim_trailing_whitespace = true
# Set default charset
charset = utf-8

# Python files
# 4 space indentation
[*.py]
indent_style = space
indent_size = 4
